<div class= "container">
  <h1><%= @list.name %></h1>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %><%= link_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></li>
    <% end %>
  </ul>
</div>
